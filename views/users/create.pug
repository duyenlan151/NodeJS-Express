extends ../layouts/common.pug

block content
  div.container
    if(action === 'update')
      h3.text-center.my-3.text-capitalize Update user 
      form(method="POST", action="/users/create?action=update&id=" + value.id)
        div.form-group
          label(for="name") Name: 
          input.form-control(type="text", id="name", name="name" value=value ? value.name : '')
        div.form-group        
          label(for="password") Password: 
          input.form-control(type="password", id="password", name="password" value=value ? value.name : '')
        button.mr-3.btn.btn-success update
      button.btn.btn-danger(onclick="javascript:window.history.back();") cancel
    else 
      h3.text-center.my-3.text-capitalize Create new user
      form(method="POST", action="/users/create?")
        div.form-group
          label(for="name") Name: 
          input.form-control(type="text", id="name", name="name" value=value ? value.name : '', placeholder="Enter your name")
        div.form-group        
          label(for="password") Password: 
          input.form-control(type="password", id="password", name="password" value=value ? value.name : '', placeholder="Enter your password")
        div.form-group        
          label(for="email") Email: 
          input.form-control(type="email", id="email", name="email" value=value ? value.name : '', placeholder="Enter your email")
        button.mr-2.btn.btn-primary create    
      button.btn.btn-danger(onclick="javascript:window.history.back();") cancel
